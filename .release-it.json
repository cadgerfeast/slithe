{
  "git": {
    "requireBranch": "master",
    "addUntrackedFiles": true,
    "requireCleanWorkingDir": false,
    "commitMessage": "Release slithe@${version}",
    "changelog": "npx auto-changelog --package --stdout --commit-limit false --unreleased --template ./devops/changelog/release.hbs"
  },
  "github": {
    "release": true
  },
  "hooks": {
    "after:bump": "npx auto-changelog --package --commit-limit false --unreleased --template ./devops/changelog/keep.hbs"
  },
  "npm": {
    "publish": true
  }
}